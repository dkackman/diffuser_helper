{
    "id": "txt2img2vid",
    "steps": [
        {
            "name": "image_generation",
            "pipeline": {
                "configuration": {
                    "pipeline_type": "DiffusionPipeline",
                    "offload": "sequential"
                },
                "from_pretrained_arguments": {
                    "model_name": "shuttleai/shuttle-3-diffusion",
                    "torch_dtype": "torch.bfloat16"
                }
            },
            "iterations": [
                {
                    "result": {
                        "content_type": "image/jpeg"
                    },
                    "arguments": {
                        "prompt": "Baroque-style battle scene with futuristic robots and a golden palace in the background.",
                        "height": 1024,
                        "width": 1024,
                        "guidance_scale": 3.5,
                        "num_inference_steps": 4,
                        "max_sequence_length": 256
                    },
                    "capture_intermediate_results": {
                        "base_image": "image"
                    }
                }
            ]
        },
        {
            "name": "image_to_video",
            "pipeline": {
                "configuration": {
                    "offload": "sequential",
                    "pipeline_type": "CogVideoXImageToVideoPipeline",
                    "vae": {
                        "enable_slicing": true,
                        "enable_tiling": true
                    }
                },
                "from_pretrained_arguments": {
                    "model_name": "THUDM/CogVideoX-5b-I2V",
                    "torch_dtype": "torch.bfloat16",
                    "use_safe_tensors": true
                }
            },
            "iterations": [
                {
                    "result": {
                        "content_type": "video/mp4"
                    },
                    "intermediate_results": {
                        "image": "{base_image}"
                    },
                    "arguments": {
                        "prompt": "explosions in the sky",
                        "num_videos_per_prompt": 1,
                        "num_inference_steps": 25,
                        "num_frames": 49,
                        "guidance_scale": 6
                    }
                }
            ]
        }
    ]
}